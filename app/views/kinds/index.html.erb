<% if @kinds.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Kind.human_attribute_name 'name' %></th>
            <th><%= Kind.human_attribute_name 'daily_acrual' %></th>
            <th><%= Kind.human_attribute_name 'cut_date' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @kinds.each do |kind| %>
            <tr>
              <td><%= kind.name %></td>
              <td><%= kind.daily_acrual %></td>
              <td><%= kind.cut_date %></td>
              <td><%= link_to_show kind %></td>
              <td><%= link_to_edit edit_kind_path(kind) if can? :update, kind %></td>
              <td><%= link_to_destroy kind if can? :destroy, kind %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@kinds) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.kinds.new', default: :'label.new'),
    new_kind_path, class: 'btn btn-primary'
  ) if can? :create, Kind %>
</div>
