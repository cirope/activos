<% if @stocks.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Stock.human_attribute_name 'load_date' %></th>
            <th><%= Stock.human_attribute_name 'ric' %></th>
            <th><%= Stock.human_attribute_name 'fund_id' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @stocks.each do |stock| %>
            <tr>
              <td><%= stock.trust_funds.inspect %></td>
              <td><%= stock.load_date %></td>
              <td><%= stock.ric %></td>
              <td><%= stock.fund_id %></td>
              <td><%= link_to_show stock %></td>
              <td><%= link_to_edit edit_stock_path(stock) if can? :update, stock %></td>
              <td><%= link_to_destroy stock if can? :destroy, stock %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@stocks) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.stocks.new', default: :'label.new'),
    new_stock_path, class: 'btn btn-primary'
  ) if can? :create, Stock %>
</div>
