<% if @rates.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Rate.human_attribute_name 'name' %></th>
            <th><%= Rate.human_attribute_name 'value' %></th>
            <th><%= Rate.human_attribute_name 'kind' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @rates.each do |rate| %>
            <tr>
              <td><%= rate.name %></td>
              <td><%= rate.value %></td>
              <td><%= rate.kind %></td>
              <td><%= link_to_show rate %></td>
              <td><%= link_to_edit edit_rate_path(rate) if can? :update, rate %></td>
              <td><%= link_to_destroy rate if can? :destroy, rate %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@rates) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.rates.new', default: :'label.new'),
    new_rate_path, class: 'btn btn-primary'
  ) if can? :create, Rate %>
</div>
