<%= simple_fields_for :payments do |f| %>
  <div class="form-inputs">
    <%= f.input :date, as: :date_picker %>
    <%= f.input :trust_fund_id, as: :hidden, value: f.object.id %>
    <%= f.input :kind %>
    <%= f.input :pay_day %>
    <%= f.input :amortization %>
    <%= f.input :amount %>
  </div>
<% end %>
